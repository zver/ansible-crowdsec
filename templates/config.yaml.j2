common:
  daemonize: true
  log_media: file
  log_level: info
  log_dir: /var/log/
  working_dir: .
config_paths:
  config_dir: /etc/crowdsec/
  data_dir: /var/lib/crowdsec/data/
  simulation_path: /etc/crowdsec/simulation.yaml
  hub_dir: /etc/crowdsec/hub/
  index_path: /etc/crowdsec/hub/.index.json
  notification_dir: /etc/crowdsec/notifications/
  plugin_dir: /usr/lib/crowdsec/plugins/
{% if cs_lapi_agent %}
crowdsec_service:
  acquisition_path: /etc/crowdsec/acquis.yaml
  parser_routines: 1
{% endif %}
cscli:
  output: human
db_config:
  log_level: info
{% if cs_lapi_server %}
{% if cs_lapi_db is defined and cs_lapi_db == 'mysql' %}
  type: mysql
  user: {{Â cs_mysql_db_user }}
  password: "{{ cs_mysql_db_password }}"
  db_name: {{ cs_mysql_db_name }}
  host: {{ cs_mysql_db_host }}
  port: 3306
{% elif cs_lapi_db is defined and cs_lapi_db == 'sqlite' %}
  type: sqlite
  db_path: {{ cs_sqlite_db_path }} 
{% else %}
  type:	postgres
  user: {{ cs_psql_db_user }}
  password: "{{ cs_psql_db_password }}"
  db_name: {{ cs_psql_db_name }}
  host: {{ cs_psql_host }}
  port: {{ cs_psql_port }}
{% endif %}
{% else %}
  type: sqlite
  db_path: {{ cs_sqlite_db_path }} 
{% endif %}
  flush:
    max_items: 5000
    max_age: 7d
plugin_config:
  user: nobody # plugin process would be ran on behalf of this user
  group: nogroup # plugin process would be ran on behalf of this group
api:
  client:
    insecure_skip_verify: false
    credentials_path: /etc/crowdsec/local_api_credentials.yaml
  server:
{% if cs_lapi_server %}
    log_level: info
    listen_uri: {{ cs_lapi_listen }}:{{ cs_lapi_port }}
    profiles_path: /etc/crowdsec/profiles.yaml
    console_path: /etc/crowdsec/console.yaml
{% if cs_central_api_enabled %}
    online_client: # Central API credentials (to push signals and receive bad IPs)
      credentials_path: /etc/crowdsec/online_api_credentials.yaml
{% endif %}
    trusted_ips: # IP ranges, or IPs which can have admin API access
      - 127.0.0.1
      - ::1
#    tls:
#      cert_file: /etc/crowdsec/ssl/cert.pem
#      key_file: /etc/crowdsec/ssl/key.pem
{% else %}
    enable: false
{% endif %}
{% if cs_prometheus_enabled %}
prometheus:
  enabled: true
  level: full
  listen_addr: {{ cs_prometheus_listen_addr }}
  listen_port: {{ cs_prometheus_listen_port }}
{% endif %}