[Unit]
Description=crowdsec in docker container
Requires=docker.service
After=docker.service
[Service]
ExecStart=/usr/bin/docker compose -f {{ cs_docker_install_dir }}/docker-compose.yml up
ExecStop=/usr/bin/docker compose -f {{ cs_docker_install_dir }}/docker-compose.yml down
Restart=on-failure
[Install]
WantedBy=default.target
